@model Musan.Panel.Areas.Admin.Models.WorkshopUpdateViewModel
@{ Layout = null; }


<div class="modal fade" data-backdrop="static" id="workshop-create"   role="dialog">

    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-success ">
                <h1 class="modal-title text-white">
                    <i class="flaticon2-pen  icon-2x text-white"></i>
                    Workshop <small class="text-white">Registration</small>
                </h1>
                <button type="button" class="close text-white" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-area="Admin" asp-controller="Workshop" asp-action="Update"
                      method="post" autocomplete="off" id="FrmCreateUser"
                      enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div class="container">
                        <div class="row ">
                            <div class="col-lg-6 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Name">Full Name <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Mobile">Mobile #  <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Mobile" />
                                <span asp-validation-for="Mobile" class="text-danger small text-uppercase"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Email">Email <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger small text-uppercase"></span>
                            </div>
                            @*<div class="col-lg-4 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Password">Password <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="password" class="form-control" asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger small text-uppercase"></span>

                            </div>
                            <div class="col-lg-4 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="ConfirmPassword">Confirm Password <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small text-uppercase"></span>

                            </div>*@
                        </div>
                        <h4 class="mt-3 border-bottom border-light">Workshop Information</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.Sponsor">Sponsor </label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.Sponsor" />
                                        <span asp-validation-for="WorkShopInfo.Sponsor" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.Department">Department </label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.Department" />
                                        <span asp-validation-for="WorkShopInfo.Department" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.Facility">Facility </label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.Facility" />
                                        <span asp-validation-for="WorkShopInfo.Facility" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.CommercialRegister">Commercial Register</label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.CommercialRegister" />
                                        <span asp-validation-for="WorkShopInfo.CommercialRegister" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.ElectonicPaymentAccount">Electonic Payment Account</label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.ElectonicPaymentAccount" />
                                        <span asp-validation-for="WorkShopInfo.ElectonicPaymentAccount" class="text-danger small text-uppercase"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.Latitude">Latitude </label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.Latitude" />
                                        <span asp-validation-for="WorkShopInfo.Latitude" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-lg-12 form-group">
                                        <label class="col-form-label font-weight-bold" asp-for="WorkShopInfo.Longitude">Longitude </label>
                                        <input type="text" class="form-control" asp-for="WorkShopInfo.Longitude" />
                                        <span asp-validation-for="WorkShopInfo.Longitude" class="text-danger small text-uppercase"></span>

                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-form-label font-weight-bold" for="Photo">Choose Main Image </label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="Photo" name="Photo" />
                                            <label class="custom-file-label" for="Photo">Choose file</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <img id="preview" src="~/images/workshop.png" alt="your image"
                                             class="img img-thumbnail img-responsive center-block d-block mx-auto" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label class="col-form-label font-weight-bold" for="Photos">Choose Workshop Image(s) </label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" multiple id="Photos" name="Photos" />
                                    <label class="custom-file-label" for="Photos">Choose file(s)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row col-12 gallery mt-2"></div>
                    </div>

                    <script>$(function () {

                            var imagesPreview = function (input, placeToInsertImagePreview) {

                                if (input.files) {
                                    var filesAmount = input.files.length;

                                    for (i = 0; i < filesAmount; i++) {
                                        var reader = new FileReader();

                                        reader.onload = function (event) {

                                            $(`<div class='card top form-group col-lg-3'>
                                                    <div class='card-body' style='padding: 1.25rem 0.25rem;'>
                                                        <img  src='${event.target.result}' width='300px' class='img img-fluid img-responsive'/>
                                                        <hr />
                                                        <a href='#' class='btn btn-sm btn-clean btn-block btn-remove'>Remove </a>
                                                    </div>
                                                </div>`).appendTo(placeToInsertImagePreview);


                                            $(".btn-remove").click(function () {
                                                $(this).parents(".top").remove();
                                            });
                                        }

                                        reader.readAsDataURL(input.files[i]);
                                    }
                                }

                            };

                            function readURL(input) {
                                if (input.files && input.files[0]) {
                                    var reader = new FileReader();

                                    reader.onload = function (e) {
                                        $('#preview').attr('src', e.target.result);
                                    }

                                    reader.readAsDataURL(input.files[0]);
                                }
                            }

                            $("#Photo").change(function () {
                                readURL(this);
                            });

                            $("#Photos").change(function () {
                                imagesPreview(this, 'div.gallery');
                            });

                        });</script>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" data-save="modal" class="btn btn-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>$.validator.unobtrusive.parse('#FrmCreate');</script>
