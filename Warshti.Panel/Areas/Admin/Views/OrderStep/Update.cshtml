@model OrderStepUpdateViewModel
@{
    Layout = null;
}


<div class="modal fade" data-backdrop="static" id="orderstep-update" tabindex="-1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success ">
                <h1 class="modal-title text-white">
                    <i class="flaticon2-pen icon-2x text-white"></i>
                    Order Step <small class="text-white">Edit</small>
                </h1>
                <button type="button" class="close text-white" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-area="Admin" asp-controller="OrderStep" asp-action="Update"
                      method="post" autocomplete="off" id="FrmCreate">
                    @Html.AntiForgeryToken()

                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id"/>
                    <div class="container">
                        <div class="row ">
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Title">Title <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Title" />
                                <span asp-validation-for="Title" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="ActionDate">Action Date <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>

                                @Html.TextBoxFor(model => model.ActionDate, "{0: yyyy-MM-dd}",
                                new { @class = "form-control date-picker" })
                                <span asp-validation-for="ActionDate" class="text-danger small text-uppercase"></span>
                            </div>

                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold">Step Status</label>
                                <div class="radio-inline">
                                    <label class="radio radio-success">
                                        <input type="radio" value="1" checked asp-for="OrderStepStatus">
                                        <span></span>In-Progress
                                    </label>
                                    <label class="radio radio-success">
                                        <input type="radio" value="2" asp-for="OrderStepStatus">
                                        <span></span>Completed
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" data-save="step-modal" class="btn btn-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $.validator.unobtrusive.parse('#FrmCreate');
</script>
