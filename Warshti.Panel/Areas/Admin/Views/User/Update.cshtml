@model UserUpdateViewModel
@{
    Layout = null;
}


<div class="modal fade" data-backdrop="static" id="user-update" tabindex="-1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success ">
                <h1 class="modal-title text-white">
                    <i class="flaticon-user-ok icon-2x text-white"></i>
                    User <small class="text-white">Edit Registration</small>
                </h1>
                <button type="button" class="close text-white" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-area="Admin" asp-controller="User" asp-action="Update"
                      method="post" autocomplete="off" id="FrmUpdate">
                    @Html.AntiForgeryToken()

                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id" />
                    <div class="container">
                        <div class="row ">
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Name">Full Name <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Mobile">Mobile # <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Mobile" />
                                <span asp-validation-for="Mobile" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Email">Email <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger small text-uppercase"></span>
                            </div>
                        </div>

                        <h4 class="border-bottom border-light">
                            Roles Assignment
                        </h4>

                        <div class="row">
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="col-lg-3 mt-1">

                                    <label asp-for="@Model.Roles[i].IsActive" class="checkbox checkbox-outline checkbox-success">
                                        <input type="checkbox" asp-for="@Model.Roles[i].IsActive" />
                                        <span class="mr-2"></span>@Model.Roles[i].Name
                                    </label>
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                    <input type="hidden" asp-for="@Model.Roles[i].Name" />
                                </div>
                            }
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" data-save="modal" class="btn btn-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $.validator.unobtrusive.parse('#FrmUpdate');
</script>
