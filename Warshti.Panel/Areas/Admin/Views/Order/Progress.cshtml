@model OrderProgressViewModel
@{
    Layout = null;
}


<div class="modal fade" data-backdrop="static" id="order-progress" tabindex="-1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success ">
                <h1 class="modal-title text-white">
                    <i class="flaticon2-pen icon-2x text-white"></i>
                    Order <small class="text-white">Progress</small>
                </h1>
                <button type="button" class="close text-white" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-area="Admin" asp-controller="Order" asp-action="Progress"
                      method="post" autocomplete="off" id="FrmCreate">
                    @Html.AntiForgeryToken()

                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Id" />
                    <div class="container">
                        <div class="row ">

                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Progress">Progress <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <input type="text" class="form-control" asp-for="Progress" />
                                <span asp-validation-for="Progress" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold">Order Status</label>
                                <div class="col-lg-12 mb-2">
                                    <label class="radio radio-success">
                                        <input type="radio" value="3" asp-for="OrderStatusId">
                                        <span></span>&nbsp;&nbsp;&nbsp;In-Progress
                                    </label>
                                </div>
                                <div class="col-lg-12 mb-2">
                                    <label class="radio radio-success">
                                        <input type="radio" value="4" asp-for="OrderStatusId">
                                        <span></span>&nbsp;&nbsp;&nbsp;Declined
                                    </label>
                                </div>
                                <div class="col-lg-12 mb-2">
                                    <label class="radio radio-success">
                                        <input type="radio" value="5" asp-for="OrderStatusId">
                                        <span></span>&nbsp;&nbsp;&nbsp;Cancelled
                                    </label>
                                </div>
                                <div class="col-lg-12 mb-2">
                                    <label class="radio radio-success">
                                        <input type="radio" value="6" asp-for="OrderStatusId">
                                        <span></span>&nbsp;&nbsp;&nbsp;Completed
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" data-save="modal" class="btn btn-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $.validator.unobtrusive.parse('#FrmCreate');
</script>
