@section Scripts{

    <!--start::Page Vendors-->
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/lib/moment.js/moment.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>

    <!--end::Page Vendors-->


    <script src="~/scripts/orders-data.js"></script>
    <script src="~/scripts/order-steps-data.js"></script>

    <script>
        $(function () {
            StepsData.init(0);
            $("#BtnNewStep").hide();
            $("#OrderName").text('');

            $("ul.menu-nav li:eq(2)").addClass("menu-item-active");

            let placeholderElement = $('#modal-placeholder');

            $("#btnNew").on("click", function (e) {
                e.preventDefault();

                let element = $(this);

                $.ajax({
                    url: "/Admin/Order/Create",
                    type: "GET",
                    success: function (response) {
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');

                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    },
                    error: function () {
                    }
                });
            });

            placeholderElement.on('click', '[data-save="modal"]', function (event) {
                event.preventDefault();

                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var dataToSend = form.serialize();

                $.post(actionUrl, dataToSend).done(function (data) {
                    var newBody = $('.modal-body', data);
                    placeholderElement.find('.modal-body').replaceWith(newBody);

                    // find IsValid input field and check it's value
                    // if it's valid then hide modal window
                    var isValid = newBody.find('[name="IsValid"]').val() == 'True';
                    if (isValid) {
                        placeholderElement.find('.modal').modal('hide');

                        var table = $('#kt_datatable');
                        table.DataTable().ajax.reload();
                    }
                    else {
                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    }
                });
            });

            $(document).delegate("#kt_datatable .btn-edit", "click", function (e) {
                e.preventDefault();
                let element = $(this);


                $.ajax({
                    url: "/Admin/Order/Update",
                    type: "GET",
                    data: { id: element.attr("data-id") },
                    success: function (response) {
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');

                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    },
                    error: function () {
                    }
                });
            });

            $(document).delegate("#kt_datatable .btn-progress", "click", function (e) {
                e.preventDefault();
                let element = $(this);


                $.ajax({
                    url: "/Admin/Order/Progress",
                    type: "GET",
                    data: { id: element.attr("data-id") },
                    success: function (response) {
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');

                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    },
                    error: function () {
                    }
                });
            });

            $(document).delegate("#kt_datatable .btn-delete", "click", function (e) {
                e.preventDefault();
                let element = $(this);

                Swal.fire({
                    title: "Are you sure?",
                    text: "Selected record will be deleted!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Yes, delete it!",
                    cancelButtonText: "No, cancel!",
                    reverseButtons: true
                }).then(function (result) {
                    if (result.value) {

                        $.ajax({
                            url: "/Admin/Order/Delete",
                            type: "DELETE",
                            data: { id: element.attr("data-id") },
                            success: function (response) {
                                if (response.status == true) {
                                    Swal.fire(
                                        "Completed!",
                                        "Record has been deleted.",
                                        "success"
                                    );
                                } else {
                                    Swal.fire(
                                        "Error",
                                        response.message,
                                        "error"
                                    );
                                }

                                var table = $('#kt_datatable');
                                table.DataTable().ajax.reload();
                            },
                            error: function () {
                            }
                        })


                        // result.dismiss can be "cancel", "overlay", "close", and "timer"
                    } else if (result.dismiss === "cancel") {
                        Swal.fire(
                            "Cancelled",
                            "You have cancelled the operation.",
                            "error"
                        )
                    }
                });
            });

            $(document).delegate("#kt_datatable .btn-steps", "click", function (e) {
                e.preventDefault();
                let element = $(this);

                let id = element.attr('data-id');

                $("#kt_datatable tr").each(function () {
                    $(this).removeClass('row-selected');
                });

                element.closest('tr').addClass('row-selected');
                StepsData.init(id);

                $("#OrderName").text(element.attr('data-service'));
                $("#BtnNewStep").attr('data-orderid', id);
                $("#BtnNewStep").show();
            });

            $("#BtnNewStep").on("click", function (e) {
                e.preventDefault();

                let element = $(this);

                $.ajax({
                    url: "/Admin/OrderStep/Create",
                    type: "GET",
                    data: { orderId: element.attr('data-orderid') },
                    success: function (response) {
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');

                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    },
                    error: function () {
                    }
                });
            });

            $(document).delegate("#kt_datatable_steps .btn-edit", "click", function (e) {
                e.preventDefault();
                let element = $(this);


                $.ajax({
                    url: "/Admin/OrderStep/Update",
                    type: "GET",
                    data: { id: element.attr("data-id") },
                    success: function (response) {
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');

                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    },
                    error: function () {
                    }
                });
            });

            placeholderElement.on('click', '[data-save="step-modal"]', function (event) {
                event.preventDefault();

                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var dataToSend = form.serialize();

                $.post(actionUrl, dataToSend).done(function (data) {
                    var newBody = $('.modal-body', data);
                    placeholderElement.find('.modal-body').replaceWith(newBody);

                    // find IsValid input field and check it's value
                    // if it's valid then hide modal window
                    var isValid = newBody.find('[name="IsValid"]').val() == 'True';
                    if (isValid) {
                        placeholderElement.find('.modal').modal('hide');

                        var table = $('#kt_datatable_steps');
                        table.DataTable().ajax.reload();
                    }
                    else {
                        $(".date-picker").datepicker({
                            format: 'yyyy-mm-dd',
                            autoclose: true,
                            clearBtn: true,
                            calendarWeeks: true,
                            todayBtn: true,
                            todayHighlight: true,
                            title: 'Select date from calendar'
                        });
                    }
                });
            });

            $(document).delegate("#kt_datatable .btn-accept", "click", function (e) {
                e.preventDefault();
                let element = $(this);

                Swal.fire({
                    title: "Are you sure to accept the offer?",
                    text: "Selected offer will be tranferred to order!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Yes, make order!",
                    cancelButtonText: "No, cancel!",
                    reverseButtons: true
                }).then(function (result) {
                    if (result.value) {

                        $.ajax({
                            url: "/Admin/Order/AcceptOffer",
                            type: "POST",
                            data: { id: element.attr("data-id") },
                            success: function (response) {
                                if (response.status == true) {
                                    Swal.fire(
                                        "Processed!",
                                        "Order has been created.",
                                        "success"
                                    );
                                } else {
                                    Swal.fire(
                                        "Error",
                                        response.message,
                                        "error"
                                    );
                                }

                                var table = $('#kt_datatable');
                                table.DataTable().ajax.reload();
                            },
                            error: function () {
                            }
                        })


                        // result.dismiss can be "cancel", "overlay", "close", and "timer"
                    } else if (result.dismiss === "cancel") {
                        Swal.fire(
                            "Cancelled",
                            "You have cancelled the operation.",
                            "error"
                        )
                    }
                });
            });
        });
    </script>
}
