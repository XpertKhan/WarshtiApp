@model ServiceUpdateViewModel
@{
    Layout = null;
}


<div class="modal fade" data-backdrop="static" id="service-update" tabindex="-1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success ">
                <h1 class="modal-title text-white">
                    <i class="flaticon2-pen icon-2x text-white"></i>
                    Service <small class="text-white">Edit</small>
                </h1>
                <button type="button" class="close text-white" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form asp-area="Admin" asp-controller="Service" asp-action="Update"
                      method="post" autocomplete="off" id="FrmUpdate">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div class="container">
                        <div class="row ">
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="UserId">Client / Workshop <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="UserId" asp-items="Model.Users">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="UserId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="Description">Description <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="ColorId">Color <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="ColorId" asp-items="Model.Colors">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="ColorId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="CompanyId">Company <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="CompanyId" asp-items="Model.Companies">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="ModelId">Model <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="ModelId" asp-items="Model.Models">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="ModelId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="TransmissionId">Transmission <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="TransmissionId" asp-items="Model.Transmissions">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="TransmissionId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="DepartmentId">Department <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="DepartmentId" asp-items="Model.Departments">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger small text-uppercase"></span>
                            </div>
                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold" asp-for="PaymentMethodId">Payment Method <i class="fa fa-star text-danger" style="font-size: 8pt;"></i></label>
                                <select class="custom-select" asp-for="PaymentMethodId" asp-items="Model.PaymentMethods">
                                    <option value="">Select From List</option>
                                </select>
                                <span asp-validation-for="PaymentMethodId" class="text-danger small text-uppercase"></span>
                            </div>

                            <div class="col-lg-12 form-group">
                                <label class="col-form-label font-weight-bold">Service Status</label>
                                <div class="radio-inline">
                                    <label class="radio radio-success">
                                        <input type="radio" value="1" asp-for="ServiceStatus">
                                        <span></span>Created
                                    </label>
                                    <label class="radio radio-success">
                                        <input type="radio" value="2" asp-for="ServiceStatus">
                                        <span></span>Ordered
                                    </label>
                                    <label class="radio radio-success">
                                        <input type="radio" value="3" asp-for="ServiceStatus">
                                        <span></span>Cancelled
                                    </label>
                                </div>
                            </div>

                        </div>
                        <h3 class="border-bottom border-light">Faults Selection</h3>
                        <div class="row">
                            @for (int i = 0; i < Model.Faults.Count; i++)
                            {
                                <div class="col-lg-12 mb-1">

                                    <label asp-for="@Model.Faults[i].IsActive" class="checkbox checkbox-outline checkbox-success">
                                        <input type="checkbox" asp-for="@Model.Faults[i].IsActive" />
                                        <span class="mr-2"></span>@Model.Faults[i].Name
                                    </label>
                                    <input type="hidden" asp-for="@Model.Faults[i].FaultId" />
                                    <input type="hidden" asp-for="@Model.Faults[i].Name" />
                                </div>
                            }
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" data-save="modal" class="btn btn-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validate/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $.validator.unobtrusive.parse('#FrmUpdate');
</script>
<script>
    $(function () {

    });
</script>